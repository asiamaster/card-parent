<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dili.card.dao.IFundConsignorDao">
	
	<select id="selectList" resultType="com.dili.card.entity.FundConsignorDo">
		SELECT
			`id`, 
			`contract_no`, 
			`consignee_name`, 
			`signature_image_path`, 
			`consignee_id_code`, 
			`consignee_id_mobile`, 
			`create_time`, 
			`firm_id`, 
			`firm_name`
		FROM
			card_fund_consignor
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO card_fund_consignor (
			`contract_no`, 
			`consignee_name`, 
			`signature_image_path`, 
			`consignee_id_code`, 
			`consignee_id_mobile`, 
			`create_time`, 
			`firm_id`, 
			`firm_name`
		)
		VALUES (
			#{contractNo}, 
			#{consigneeName}, 
			#{signatureImagePath}, 
			#{consigneeIdCode}, 
			#{consigneeIdMobile}, 
			#{createTime}, 
			#{firmId}, 
			#{firmName}
		)
	</insert>
	
	<insert id="saveBatch">
		INSERT INTO card_fund_consignor (
			`contract_no`, 
			`consignee_name`, 
			`signature_image_path`, 
			`consignee_id_code`, 
			`consignee_id_mobile`, 
			`create_time`, 
			`firm_id`, 
			`firm_name`
		)
		VALUES 
		<foreach collection="list" item="item" index="index"
                 separator=",">
                 (
			#{item.contractNo}, 
			#{item.cconsigneeName}, 
			#{item.csignatureImagePath}, 
			#{item.cconsigneeIdCode}, 
			#{item.cconsigneeIdMobile}, 
			#{item.ccreateTime}, 
			#{item.cfirmId}, 
			#{item.cfirmName}
		)
         </foreach>
	</insert>
	
	<select id="getByContractNo" resultType="com.dili.card.entity.FundConsignorDo">
		SELECT
			`id`, 
			`contract_no`, 
			`consignee_name`, 
			`signature_image_path`, 
			`consignee_id_code`, 
			`consignee_id_mobile`, 
			`create_time`, 
			`firm_id`, 
			`firm_name`
		FROM
			card_fund_consignor
		WHERE
			contract_no = #{contractNo}
	</select>
	
	<update id="update">
		UPDATE card_fund_consignor
	 	<set>
			<if test="contractNo != null">`contract_no` = #{contractNo}, </if>
			<if test="consigneeName != null">`consignee_name` = #{consigneeName}, </if>
			<if test="signatureImagePath != null">`signature_image_path` = #{signatureImagePath}, </if>
			<if test="consigneeIdCode != null">`consignee_id_code` = #{consigneeIdCode}, </if>
			<if test="consigneeIdMobile != null">`consignee_id_mobile` = #{consigneeIdMobile}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="firmId != null">`firm_id` = #{firmId}, </if>
			<if test="firmName != null">`firm_name` = #{firmName}</if>
		</set>
		WHERE
			id = #{id}
	</update>

</mapper>