<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dili.card.dao.IFundContractDao">
	
	<select id="selectList" resultType="com.dili.card.entity.FundContractEntity">
		SELECT
			`id`, 
			`contract_no`, 
			`consignor_account_id`, 
			`start_time`, 
			`end_time`, 
			`state`, 
			`signature_image_path`, 
			`creator_id`, 
			`creator`, 
			`firm_id`, 
			`firm_name`, 
			`notes`, 
			`create_time`, 
			`modify_time`
		FROM
			card_fund_contract
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO card_fund_contract (
			`contract_no`, 
			`consignor_account_id`, 
			`start_time`, 
			`end_time`, 
			`state`, 
			`signature_image_path`, 
			`creator_id`, 
			`creator`, 
			`firm_id`, 
			`firm_name`, 
			`notes`, 
			`create_time`, 
			`modify_time`
		)
		VALUES (
			#{contractNo}, 
			#{consignorAccountId}, 
			#{startTime}, 
			#{endTime}, 
			#{state}, 
			#{signatureImagePath}, 
			#{creatorId}, 
			#{creator}, 
			#{firmId}, 
			#{firmName}, 
			#{notes}, 
			#{createTime}, 
			#{modifyTime}
		)
	</insert>
	
	<select id="getById" resultType="com.dili.card.entity.FundContractEntity">
		SELECT
			`id`, 
			`contract_no`, 
			`consignor_account_id`, 
			`start_time`, 
			`end_time`, 
			`state`, 
			`signature_image_path`, 
			`creator_id`, 
			`creator`, 
			`firm_id`, 
			`firm_name`, 
			`notes`, 
			`create_time`, 
			`modify_time`
		FROM
			card_fund_contract
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE card_fund_contract
	 	<set>
			<if test="contractNo != null">`contract_no` = #{contractNo}, </if>
			<if test="consignorAccountId != null">`consignor_account_id` = #{consignorAccountId}, </if>
			<if test="startTime != null">`start_time` = #{startTime}, </if>
			<if test="endTime != null">`end_time` = #{endTime}, </if>
			<if test="state != null">`state` = #{state}, </if>
			<if test="signatureImagePath != null">`signature_image_path` = #{signatureImagePath}, </if>
			<if test="creatorId != null">`creator_id` = #{creatorId}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="firmId != null">`firm_id` = #{firmId}, </if>
			<if test="firmName != null">`firm_name` = #{firmName}, </if>
			<if test="notes != null">`notes` = #{notes}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			card_fund_contract
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>