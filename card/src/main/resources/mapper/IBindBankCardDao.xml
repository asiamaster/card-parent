<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dili.card.dao.IBindBankCardDao">
	
	<select id="selectList" resultType="com.dili.card.dto.BindBankCardDto">
		SELECT
			`id`, 
			`account_type`, 
			`account_id`, 
			`fund_account_id`, 
			`bank_type`, 
			`bank_no`, 
			`opening_bank`, 
			`opening_bank_num`, 
			`name`, 
			`status`, 
			`operator_id`, 
			`operator_name`, 
			`created_time`, 
			`modified_time`, 
			`description`
		FROM
			card_bind_bank_card
		WHERE
			account_id = ${accountId}
		ORDER BY
			created_time DESC
	</select>
	
	<insert id="save">
		INSERT INTO card_bind_bank_card (
			`account_type`, 
			`account_id`, 
			`fund_account_id`, 
			`bank_type`, 
			`bank_no`, 
			`opening_bank`, 
			`opening_bank_num`, 
			`name`, 
			`status`, 
			`operator_id`, 
			`operator_name`, 
			`created_time`, 
			`modified_time`, 
			`description`
		)
		VALUES (
			#{accountType}, 
			#{accountId}, 
			#{fundAccountId}, 
			#{bankType}, 
			#{bankNo}, 
			#{openingBank}, 
			#{openingBankNum}, 
			#{name}, 
			#{status}, 
			#{operatorId}, 
			#{operatorName}, 
			#{createdTime}, 
			#{modifiedTime}, 
			#{description}
		)
	</insert>
	
	<select id="getById" resultType="com.dili.card.entity.BindBankCardDo">
		SELECT
			`id`, 
			`account_type`, 
			`account_id`, 
			`fund_account_id`, 
			`bank_type`, 
			`bank_no`, 
			`opening_bank`, 
			`opening_bank_num`, 
			`name`, 
			`status`, 
			`operator_id`, 
			`operator_name`, 
			`created_time`, 
			`modified_time`, 
			`description`
		FROM
			card_bind_bank_card
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE card_bind_bank_card
	 	<set>
			<if test="accountType != null">`account_type` = #{accountType}, </if>
			<if test="accountId != null">`account_id` = #{accountId}, </if>
			<if test="fundAccountId != null">`fund_account_id` = #{fundAccountId}, </if>
			<if test="bankType != null">`bank_type` = #{bankType}, </if>
			<if test="bankNo != null">`bank_no` = #{bankNo}, </if>
			<if test="openingBank != null">`opening_bank` = #{openingBank}, </if>
			<if test="openingBankNum != null">`opening_bank_num` = #{openingBankNum}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="operatorId != null">`operator_id` = #{operatorId}, </if>
			<if test="operatorName != null">`operator_name` = #{operatorName}, </if>
			<if test="createdTime != null">`created_time` = #{createdTime}, </if>
			<if test="modifiedTime != null">`modified_time` = #{modifiedTime}, </if>
			<if test="description != null">`description` = #{description}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			card_bind_bank_card
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>