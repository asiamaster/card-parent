<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dili.card.dao.IBindBankCardDao">
	
	<select id="selectList" resultType="com.dili.card.dto.BindBankCardDto">
		SELECT
			`id`, 
			`bank_account_type`, 
			`account_id`, 
			`fund_account_id`,
			`bank_name`, 
			`bank_type`, 
			`bank_no`, 
			`opening_bank`, 
			`opening_bank_num`, 
			`name`, 
			`status`, 
			`firm_id`,
			`operator_id`, 
			`operator_name`, 
			`create_time`, 
			`modify_time`, 
			`description`
		FROM
			card_bind_bank_card
		WHERE
			firm_id = ${firmId}
		AND status = 1
			<if test="accountId != null">AND `account_id` = #{accountId} </if>
		ORDER BY
			${sort} ${order}
	</select>
	
	<insert id="save">
		INSERT INTO card_bind_bank_card (
			`bank_account_type`, 
			`account_id`, 
			`fund_account_id`,
			`bank_name`, 
			`bank_type`, 
			`bank_no`, 
			`opening_bank`, 
			`opening_bank_num`, 
			`name`, 
			`status`,
			`firm_id`, 
			`operator_id`, 
			`operator_name`, 
			`create_time`, 
			`modify_time`, 
			`description`
		)
		VALUES (
			#{bankAccountType}, 
			#{accountId}, 
			#{fundAccountId},
			#{bankName}, 
			#{bankType}, 
			#{bankNo}, 
			#{openingBank}, 
			#{openingBankNum}, 
			#{name}, 
			#{status}, 
			#{firmId},
			#{operatorId}, 
			#{operatorName}, 
			#{createTime}, 
			#{modifyTime}, 
			#{description}
		)
	</insert>
	
	<select id="getById" resultType="com.dili.card.entity.BindBankCardDo">
		SELECT
			`id`, 
			`bank_account_type`, 
			`account_id`, 
			`fund_account_id`, 
			`bank_name`,
			`bank_type`, 
			`bank_no`, 
			`opening_bank`, 
			`opening_bank_num`, 
			`name`, 
			`status`, 
			`firm_id`,
			`operator_id`, 
			`operator_name`, 
			`create_time`, 
			`modify_time`, 
			`description`
		FROM
			card_bind_bank_card
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE card_bind_bank_card
	 	<set>
			<if test="bankAccountType != null">`bank_account_type` = #{bankAccountType}, </if>
			<if test="accountId != null">`account_id` = #{accountId}, </if>
			<if test="fundAccountId != null">`fund_account_id` = #{fundAccountId}, </if>
			<if test="bankName != null">`bank_name` = #{bankName}, </if>
			<if test="bankType != null">`bank_type` = #{bankType}, </if>
			<if test="bankNo != null">`bank_no` = #{bankNo}, </if>
			<if test="openingBank != null">`opening_bank` = #{openingBank}, </if>
			<if test="openingBankNum != null">`opening_bank_num` = #{openingBankNum}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="operatorId != null">`operator_id` = #{operatorId}, </if>
			<if test="operatorName != null">`operator_name` = #{operatorName}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}, </if>
			<if test="description != null">`description` = #{description}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			card_bind_bank_card
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>