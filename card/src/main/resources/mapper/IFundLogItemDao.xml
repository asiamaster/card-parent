<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dili.card.dao.IFundLogItemDao">
	
	<select id="selectList" resultType="com.dili.card.entity.FundLogItemDo">
		SELECT
			`id`, 
			`serial_no`, 
			`type`, 
			`type_name`, 
			`amount`, 
			`create_time`
		FROM
			card_fund_log_item
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO card_fund_log_item (
			`serial_no`, 
			`type`, 
			`type_name`, 
			`amount`, 
			`create_time`
		)
		VALUES (
			#{serialNo}, 
			#{type}, 
			#{typeName}, 
			#{amount}, 
			#{createTime}
		)
	</insert>
	
	<select id="getById" resultType="com.dili.card.entity.FundLogItemDo">
		SELECT
			`id`, 
			`serial_no`, 
			`type`, 
			`type_name`, 
			`amount`, 
			`create_time`
		FROM
			card_fund_log_item
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE card_fund_log_item
	 	<set>
			<if test="serialNo != null">`serial_no` = #{serialNo}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="typeName != null">`type_name` = #{typeName}, </if>
			<if test="amount != null">`amount` = #{amount}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			card_fund_log_item
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>