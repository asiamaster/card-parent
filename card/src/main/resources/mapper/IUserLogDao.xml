<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dili.card.dao.IUserLogDao">
	
	<select id="selectList" resultType="com.dili.card.entity.UserLogDo">
		SELECT
			`id`, 
			`serial_no`, 
			`cycle_no`, 
			`account_id`,
			`customer_id`,
			`customer_no`, 
			`customer_name`, 
			`card_no`, 
			`type`, 
			`total_amount`, 
			`operator_id`, 
			`operator_no`, 
			`operator_name`, 
			`operate_time`, 
			`firm_id`, 
			`notes`, 
			`attach`
		FROM
			card_user_log
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO card_user_log (
			`serial_no`, 
			`cycle_no`, 
			`account_id`,
			`customer_id`,
			`customer_no`, 
			`customer_name`, 
			`card_no`, 
			`type`, 
			`total_amount`, 
			`operator_id`, 
			`operator_no`, 
			`operator_name`, 
			`operate_time`, 
			`firm_id`, 
			`notes`, 
			`attach`
		)
		VALUES (
			#{serialNo}, 
			#{cycleNo}, 
			#{accountId},
			#{customerId},
			#{customerNo}, 
			#{customerName}, 
			#{cardNo}, 
			#{type}, 
			#{totalAmount}, 
			#{operatorId}, 
			#{operatorNo}, 
			#{operatorName}, 
			#{operateTime}, 
			#{firmId}, 
			#{notes}, 
			#{attach}
		)
	</insert>
	
	<select id="getById" resultType="com.dili.card.entity.UserLogDo">
		SELECT
			`id`, 
			`serial_no`, 
			`cycle_no`, 
			`account_id`,
			`customer_id`,
			`customer_no`, 
			`customer_name`, 
			`card_no`, 
			`type`, 
			`total_amount`, 
			`operator_id`, 
			`operator_no`, 
			`operator_name`, 
			`operate_time`, 
			`firm_id`, 
			`notes`, 
			`attach`
		FROM
			card_user_log
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE card_user_log
	 	<set>
			<if test="serialNo != null">`serial_no` = #{serialNo}, </if>
			<if test="cycleNo != null">`cycle_no` = #{cycleNo}, </if>
			<if test="accountId != null">`account_id` = #{accountId}, </if>
			<if test="customerId != null">`customer_id` = #{customerId},</if>
			<if test="customerNo != null">`customer_no` = #{customerNo}, </if>
			<if test="customerName != null">`customer_name` = #{customerName}, </if>
			<if test="cardNo != null">`card_no` = #{cardNo}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="totalAmount != null">`total_amount` = #{totalAmount}, </if>
			<if test="operatorId != null">`operator_id` = #{operatorId}, </if>
			<if test="operatorNo != null">`operator_no` = #{operatorNo}, </if>
			<if test="operatorName != null">`operator_name` = #{operatorName}, </if>
			<if test="operateTime != null">`operate_time` = #{operateTime}, </if>
			<if test="firmId != null">`firm_id` = #{firmId}, </if>
			<if test="notes != null">`notes` = #{notes}, </if>
			<if test="attach != null">`attach` = #{attach}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			card_user_log
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>